@using SharedModels.Responses.Notes

<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public NoteResponse ActiveNote { get; set; }

    public Action ActiveNoteChanged { get; set; }

    public void SetActiveNote(NoteResponse note)
    {
        ActiveNote = note;
        ActiveNoteChanged.Invoke();
    }
}
