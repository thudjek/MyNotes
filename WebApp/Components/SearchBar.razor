<div class="search-bar">
    <input class="search-input" type="text" placeholder="Search" @bind="InputValue" @oninput="(ChangeEventArgs e) => OnInputHandler(e?.Value?.ToString())" />
    <button @onclick="() => ClearInput(true)" class="search-clear-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
        </svg>
    </button>
</div>

@code {
    public string InputValue { get; private set; }

    public async Task ClearInput(bool invokeSearch)
    {
        InputValue = "";

        if(invokeSearch)
            await SearchChangedCallback.InvokeAsync(InputValue);
    }

    [Parameter]
    public EventCallback<string> SearchChangedCallback { get; set; }

    private async Task OnInputHandler(string inputValue)
    {
        await SearchChangedCallback.InvokeAsync(inputValue);
    }
}
